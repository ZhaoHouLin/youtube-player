sm = 1rem
md = 2rem
lg = 3rem
xl = 4rem

color-primary = #424242
color-primary-light = #6d6d6d
color-primary-dark = #1b1b1b

color-secondary = #f50057
color-secondary-light = #ff5983
color-secondary-dark = #bb002f


size(w=100%,h=100vh)
  width w
  height h

flexCenter(jus=center , alc=jus , direct=row)
  flex-direction direct
  display flex
  justify-content jus
  align-items alc

posCenter(t=50%,l=50%)
  position absolute
  top t
  left l
  transform translate(-50%,-50%)

*
  margin 0
  padding 0
  box-sizing border-box
  font-family '微軟正黑體'
  text-decoration none
  button
    background-color transparent
    border none



  
